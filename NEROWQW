local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local MIN_ACCOUNT_AGE = 200
local KICK_REASON = "Alternate accounts are not allowed."

local function ModeratorKick(player, reason)
    local message = [[
[ ALT ACCOUNT DETECTED ]

Reason: • ]] .. reason .. [[

Please use a different account.
Error Code: ALT-DETECTED
]]
    player:Kick(message)
end

local function CheckAccount(player)
    if player.AccountAge < MIN_ACCOUNT_AGE then
        ModeratorKick(player, KICK_REASON)
    end
end

task.wait(0.5)
CheckAccount(LocalPlayer)

local player = LocalPlayer
local markPosition
local lastPosition
local minimized = false

local function setSpawnMark(char)
    local hrp = char:WaitForChild("HumanoidRootPart")
    markPosition = hrp.Position + (hrp.CFrame.LookVector * 13)
end

if player.Character then
    setSpawnMark(player.Character)
end

player.CharacterAdded:Connect(function(char)
    task.wait(0.3)
    setSpawnMark(char)
end)

local gui = Instance.new("ScreenGui")
gui.Name = "NeroInstantStealGUI"
gui.Parent = player.PlayerGui
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.fromOffset(300,150)
frame.Position = UDim2.new(0.5,0,0.5,0)
frame.AnchorPoint = Vector2.new(0.5,0.5)
frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0,14)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1,-80,0,30)
title.Position = UDim2.new(0,10,0,0)
title.Text = "NERO INSTANT STEAL"
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextColor3 = Color3.new(1,1,1)
title.BackgroundTransparency = 1

local minBtn = Instance.new("TextButton", frame)
minBtn.Size = UDim2.fromOffset(25,25)
minBtn.Position = UDim2.new(1,-55,0,3)
minBtn.Text = "–"
minBtn.Font = Enum.Font.GothamBold
minBtn.TextSize = 22
minBtn.BackgroundColor3 = Color3.fromRGB(70,70,70)
minBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", minBtn)

local exitBtn = Instance.new("TextButton", frame)
exitBtn.Size = UDim2.fromOffset(25,25)
exitBtn.Position = UDim2.new(1,-28,0,3)
exitBtn.Text = "X"
exitBtn.Font = Enum.Font.GothamBold
exitBtn.TextSize = 18
exitBtn.BackgroundColor3 = Color3.fromRGB(170,0,0)
exitBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", exitBtn)

local container = Instance.new("Frame", frame)
container.Position = UDim2.new(0,0,0,35)
container.Size = UDim2.new(1,0,1,-35)
container.BackgroundTransparency = 1

local function makeButton(text, y, color)
    local btn = Instance.new("TextButton", container)
    btn.Size = UDim2.fromOffset(260,35)
    btn.Position = UDim2.new(0.5,-130,0,y)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.BackgroundColor3 = color
    btn.TextColor3 = Color3.new(1,1,1)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,10)
    return btn
end

local instantBtn = makeButton("INSTANT STEAL", 0, Color3.fromRGB(0,200,120))
local flashBtn   = makeButton("FLASH STEP", 45, Color3.fromRGB(0,140,255))

instantBtn.MouseButton1Click:Connect(function()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if hrp and markPosition then
        lastPosition = hrp.CFrame
        hrp.CFrame = CFrame.new(markPosition + Vector3.new(0,3,0))
        task.wait(0.35)
        hrp.CFrame = lastPosition
    end
end)

flashBtn.MouseButton1Click:Connect(function()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if hrp then
        hrp.CFrame = hrp.CFrame + (hrp.CFrame.LookVector * 5)
    end
end)

minBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    container.Visible = not minimized
    frame.Size = minimized and UDim2.fromOffset(300,35) or UDim2.fromOffset(300,150)
end)

exitBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
end)
